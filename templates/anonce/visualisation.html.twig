    <!-- ##### Catagory Area Start ##### -->
    <div class="clever-catagory blog-details bg-img d-flex align-items-center justify-content-center p-3 height-400" style="background-image: url(../img/pdp_annonce/{{pdp}});">
        <div class="blog-details-headline">
          <center>  <img src="{{asset('img/pdp_annonce/' ~ pdp)}}" alt="" style="height:80px; width:80px; border-radius: 100%;" /></center>
