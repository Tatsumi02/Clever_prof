                    <div class="blog-details-text">
                        {% for info in allData %}
                        <h3>{{info.titre}}</h3>
                        
                        <h5 class="text-center py-4">Mon parcours</h5>
                        <p>{{info.parcours}}</p>

                        <h5 class="text-center py-4">Ma methodologie</h5>
                        <p>{{info.methodologie}}</p>
                        <!-- Tags -->
                        <div class="post-tags">
                            <ul>
                                <li><a href="#" class="active">booster l'annonce <span class="fa fa-euro"></span> </a></li>
                                <li><a href="{{path('update',{'id_anonce':info.id})}}">modifier l'annonce <span class="fa fa-pencil"></span> </a></li>
                                <li><a href="{{path('certifier_anonce',{'id':info.id})}}">certifier cette annonce <span class="fa fa-check"></span> </a></li>
                            </ul>
                        </div>
                        {% endfor %}
                    </div>
                    <br />
                    <br />
                    <div class="blog-details-text" style="background: rgb(48, 173, 223); color:white;">
                       Votre annonce est enregistrer et sera diponnible apres l'approbation des administrateurs
                    </div>
                    <br>
                     <center>
                         <a href="{{path('dashboad')}}" class="btn btn-primary">Acceuil <span class="fa fa-home"></span></a>
                     </center>
                </div>
            </div>
        </div>
        
