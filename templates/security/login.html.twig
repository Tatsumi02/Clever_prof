{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheet %}
    
       <link rel="stylesheet" href="../style.css">
        
    {% endblock stylesheet %}

{% block body %}
<div class="col-md-10 container" style="margin:auto;margin-block-end:10%;margin-block-start:5%;">
<h1 class="text-center">Please sign in</h1>

<form method="post" style="margin:auto;">
    
    
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as <b>{{ app.user.username }}</b> <a href="{{ path('app_logout') }}" style="color:blue;" class="pull-right">Logout</a>
        </div>
    {% endif %}
    
    <div class="row">
    
    <div class="col-12 col-lg-6">    
    <div class="form-group">
        <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    </div>
    </div>
    
    <div class="col-12 col-lg-6">
    <div class="form-group">
        <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>
    </div>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <div class="col-md-4" style="margin: auto;">
    <button class="btn clever-btn w-100" type="submit">
        Sign in
    </button>
    </div>
</div>
</form>
</div>
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    
{% endblock %}

{% block Javascript %}
    <script src="../js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="../js/bootstrap/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="../js/bootstrap/bootstrap.min.js"></script>
    <!-- All Plugins js -->
    <script src="../js/plugins/plugins.js"></script>
    <!-- Active js -->
    <script src="../js/active.js"></script>
{% endblock Javascript %}
