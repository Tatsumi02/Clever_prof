{% extends 'baseLogin.html.twig' %}

{% block title %}votre profil!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <center>
     <div class="col-md-10">
        <img src="img/pdp/{{app.user.pdp}}" alt="" style="height: 150px; width:150px; border-radius:100%;"/>
        <a href="{{path('form')}}" title="modifier votre photo de profil"><div class="badge" style="top:-15em; background:rgb(238, 233, 233); font-size:1.8em; margin:2%;"> <div class="fa fa-pencil"></div> </div></a>
        <br>
       <h3> {{app.user.nom}} {{app.user.prenom}} </h3>
     </div>
     </center>
</div>
{% endblock %}
