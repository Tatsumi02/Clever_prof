{% extends 'baseAdmin.html.twig' %}

{% block title %}Ajoute une disipline !{% endblock %}

{% block stylesheet %}
    
       <link rel="stylesheet" href="../style.css">
        
{% endblock stylesheet %}


{% block body %}
 <div class="container">
     <div class="col-md-5"></div>
     <p>
         Cree les specialit√©s d'un cours maintenant
         <br>
         <div style="color:red;">
            {{erreur}}
            {% if code == 1 and erreur %}
            <a href="{{path('modifier_matiere')}}">ICI</a>
            {% endif %}
         </div>
         <form action="{{path('add_cours')}}" method="post">
             <input type="text" required name="cours" id="cours" class="form-control" placeholder="cours a enregistrer" /> <br>
             <textarea name="specialite" required id="specialite" cols="30" rows="10" class="form-control" placeholder="Entre les disciplines en fonction du cours en leur separent par des virgules "></textarea>
            <br>
         <button class="btn btn-primary btn-lg">Envoyer <span class="fa fa-send"></span></button>
         </form>
     </p>
     </div>
 </div>
 <br><br>
